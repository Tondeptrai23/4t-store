<%- contentFor('body') %>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12">
            <!-- Header -->
            <div class="row align-items-center mb-4">
                <div class="col">
                    <h2 class="h5 page-title">
                        Chi tiết đơn hàng #<%= order.orderId %>
                    </h2>
                </div>
                <div class="col-auto">
                    <a href="/admin/orders" class="btn btn-secondary">
                        <i class="fe fe-arrow-left fe-16 mr-2"></i>
                        Quay lại
                    </a>
                </div>
            </div>

            <!-- Order Info Card -->
            <div class="row">
                <div class="col-md-8">
                    <div class="card shadow mb-4">
                        <div class="card-header">
                            <strong>Thông tin đơn hàng</strong>
                        </div>
                        <div class="card-body">
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <p class="mb-2">
                                        <strong>Trạng thái:</strong>
                                        <span
                                            class="badge badge-<%= order.status === 'Chờ xử lý' ? 'warning' : order.status === 'Đang xử lý' ? 'info' : order.status === 'Đã giao' ? 'success' : 'danger' %>"
                                        >
                                            <%= order.status %>
                                        </span>
                                    </p>
                                    <p class="mb-2">
                                        <strong>Ngày đặt hàng:</strong>
                                        <%= new
                                        Date(order.createdAt).toLocaleDateString('vi-VN')
                                        %>
                                    </p>
                                    <p class="mb-2">
                                        <strong>Địa chỉ giao hàng:</strong>
                                        <%= order.address %>
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-2">
                                        <strong>Tổng tiền:</strong>
                                        <%= new Intl.NumberFormat('vi-VN', {
                                        style: 'currency', currency: 'VND'
                                        }).format(order.total) %>
                                    </p>
                                    <p class="mb-2">
                                        <strong>Mã người dùng:</strong>
                                        <%= order.userId %>
                                    </p>
                                </div>
                            </div>

                            <!-- Order Items -->
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Sản phẩm</th>
                                            <th>Đơn giá</th>
                                            <th>Số lượng</th>
                                            <th>Thành tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% order.orderItems.forEach(item => { %>
                                        <tr>
                                            <td>
                                                <div
                                                    class="d-flex align-items-center"
                                                >
                                                    <% if (item.product.images
                                                    &&
                                                    item.product.images.length >
                                                    0) { %>
                                                    <img
                                                        src="/images/<%= item.product.images[0].path %>"
                                                        alt="<%= item.product.name %>"
                                                        class="mr-3"
                                                        width="50"
                                                    />
                                                    <% } %>
                                                    <div>
                                                        <strong>
                                                            <%=
                                                            item.product.name %>
                                                        </strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <%= new
                                                Intl.NumberFormat('vi-VN', {
                                                style: 'currency', currency:
                                                'VND'
                                                }).format(item.priceAtPurchase)
                                                %>
                                            </td>
                                            <td><%= item.quantity %></td>
                                            <td>
                                                <%= new
                                                Intl.NumberFormat('vi-VN', {
                                                style: 'currency', currency:
                                                'VND'
                                                }).format(item.priceAtPurchase *
                                                item.quantity) %>
                                            </td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="3" class="text-right">
                                                <strong>Tổng cộng:</strong>
                                            </td>
                                            <td>
                                                <strong>
                                                    <%= new
                                                    Intl.NumberFormat('vi-VN', {
                                                    style: 'currency', currency:
                                                    'VND' }).format(order.total)
                                                    %>
                                                </strong>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Transaction Info Card -->
                <div class="col-md-4">
                    <div class="card shadow mb-4">
                        <div class="card-header">
                            <strong>Thông tin thanh toán</strong>
                        </div>
                        <div class="card-body">
                            <% if (transaction) { %>
                            <p class="mb-2">
                                <strong>Trạng thái:</strong>
                                <span
                                    class="badge badge-<%= transaction.status === 'completed' ? 'success' : transaction.status === 'pending' ? 'warning' : 'danger' %>"
                                >
                                    <%= transaction.status === 'completed' ?
                                    'Hoàn thành' : transaction.status ===
                                    'pending' ? 'Đang xử lý' : 'Thất bại' %>
                                </span>
                            </p>
                            <p class="mb-2">
                                <strong>Số tiền:</strong>
                                <%= new Intl.NumberFormat('vi-VN', { style:
                                'currency', currency: 'VND'
                                }).format(transaction.amount) %>
                            </p>
                            <div class="mb-2">
                                <strong>Từ người dùng:</strong>
                                <div class="ml-3">
                                    <% if (transaction.fromUserDetails) { %>
                                    <p class="mb-1">
                                        <%= transaction.fromUserDetails.name %>
                                    </p>
                                    <p class="mb-1">
                                        Email: <%=
                                        transaction.fromUserDetails.email %>
                                    </p>
                                    <% } else { %>
                                    <p class="mb-1">
                                        Username: <%=
                                        transaction.fromUser.username %>
                                    </p>
                                    <p class="mb-1 text-muted">
                                        Không tìm thấy thông tin chi tiết
                                    </p>
                                    <% } %>
                                </div>
                            </div>

                            <div class="mb-2">
                                <strong>Đến người dùng:</strong>
                                <div class="ml-3">
                                    <% if (transaction.toUserDetails) { %>
                                    <p class="mb-1">
                                        <%= transaction.toUserDetails.name %>
                                    </p>
                                    <p class="mb-1">
                                        Email: <%=
                                        transaction.toUserDetails.email %>
                                    </p>
                                    <% } else { %>
                                    <p class="mb-1">
                                        Username: <%=
                                        transaction.toUser.username %>
                                    </p>
                                    <p class="mb-1 text-muted">
                                        Không tìm thấy thông tin chi tiết
                                    </p>
                                    <% } %>
                                </div>
                            </div>
                            <% if (transaction.message) { %>
                            <p class="mb-2">
                                <strong>Ghi chú:</strong>
                                <%= transaction.message %>
                            </p>
                            <% } %> <% } else { %>
                            <div class="alert alert-warning mb-0">
                                Không tìm thấy thông tin thanh toán
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- contentFor('style') %>
<style>
    .badge {
        padding: 0.5em 1em;
    }
    .table td {
        vertical-align: middle;
    }
</style>

<%- contentFor('script') %>
<script>
    // Add any necessary JavaScript here
</script>
