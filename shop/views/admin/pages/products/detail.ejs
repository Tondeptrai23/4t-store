<%- contentFor('body') %>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12">
            <!-- Header -->
            <div class="row align-items-center mb-4">
                <div class="col">
                    <h2 class="h5 page-title">Chi tiết sản phẩm</h2>
                </div>
                <div class="col-auto">
                    <a href="/admin/products" class="btn btn-secondary">
                        <i class="fe fe-arrow-left fe-16 mr-2"></i>
                        Quay lại
                    </a>
                    <a
                        href="/admin/products/edit/<%= product.productId %>"
                        class="btn btn-primary ml-2"
                    >
                        <i class="fe fe-edit fe-16 mr-2"></i>
                        Chỉnh sửa
                    </a>
                </div>
            </div>

            <div class="row">
                <!-- Product Images -->
                <div class="col-md-4 mb-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="product-images">
                                <% if (product.images && product.images.length >
                                0) { %>
                                <div class="main-image mb-3">
                                    <img
                                        src="/images/<%= product.images[0].path %>"
                                        alt="<%= product.name %>"
                                        class="img-fluid rounded"
                                    />
                                </div>
                                <% if (product.images.length > 1) { %>
                                <div class="thumbnail-images d-flex flex-wrap">
                                    <% product.images.forEach((image, index) =>
                                    { %>
                                    <div
                                        class="thumbnail-image mr-2 mb-2"
                                        style="width: 80px; height: 80px"
                                    >
                                        <img
                                            src="/images/<%= image.path %>"
                                            alt="<%= product.name %> - <%= index + 1 %>"
                                            class="img-fluid rounded cursor-pointer"
                                            onclick="setMainImage(this.src)"
                                        />
                                    </div>
                                    <% }); %>
                                </div>
                                <% } %> <% } else { %>
                                <div class="text-center p-4">
                                    <i
                                        class="fe fe-image fe-32 text-muted mb-2"
                                    ></i>
                                    <p class="text-muted">Không có hình ảnh</p>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Product Information -->
                <div class="col-md-8">
                    <div class="card shadow mb-4">
                        <div class="card-header">
                            <strong>Thông tin sản phẩm</strong>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="text-muted mb-1">
                                            Tên sản phẩm
                                        </label>
                                        <h4><%= product.name %></h4>
                                    </div>
                                    <div class="mb-3">
                                        <label class="text-muted mb-1">
                                            Giá
                                        </label>
                                        <h5 class="text-primary">
                                            <%= new Intl.NumberFormat('vi-VN', {
                                            style: 'currency', currency: 'VND'
                                            }).format(product.price) %>
                                        </h5>
                                    </div>
                                    <div class="mb-3">
                                        <label class="text-muted mb-1">
                                            Kích thước
                                        </label>
                                        <p class="mb-0"><%= product.size %></p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="text-muted mb-1">
                                            Màu sắc
                                        </label>
                                        <div class="d-flex align-items-center">
                                            <div
                                                class="color-box mr-2"
                                                style="
                                                    width: 20px;
                                                    height: 20px;
                                                    background-color: <%=
                                                        product.color.toLowerCase(

                                                        )
                                                        %>;
                                                    border: 1px solid #ddd;
                                                    border-radius: 4px;
                                                "
                                            ></div>
                                            <p class="mb-0">
                                                <% const colorMap = { 'Black':
                                                'Đen', 'Red': 'Đỏ', 'Blue':
                                                'Xanh dương', 'Grey': 'Xám',
                                                'White': 'Trắng' } %> <%=
                                                colorMap[product.color] ||
                                                product.color %>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="text-muted mb-1">
                                            Ngày tạo
                                        </label>
                                        <p class="mb-0">
                                            <%= new
                                            Date(product.createdAt).toLocaleDateString('vi-VN')
                                            %>
                                        </p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="text-muted mb-1">
                                            Cập nhật lần cuối
                                        </label>
                                        <p class="mb-0">
                                            <%= new
                                            Date(product.updatedAt).toLocaleDateString('vi-VN')
                                            %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-12">
                                    <label class="text-muted mb-1">Mô tả</label>
                                    <p class="mb-0">
                                        <%= product.description %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Order History -->
                    <div class="card shadow">
                        <div class="card-header">
                            <strong>Lịch sử đơn hàng</strong>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Mã đơn hàng</th>
                                            <th>Ngày đặt</th>
                                            <th>Số lượng</th>
                                            <th>Tổng tiền</th>
                                            <th>Trạng thái</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (orderHistory &&
                                        orderHistory.length > 0) { %> <%
                                        orderHistory.forEach(order => { %>
                                        <tr>
                                            <td>
                                                <a
                                                    href="/admin/orders/<%= order.orderId %>"
                                                >
                                                    <%= order.orderId %>
                                                </a>
                                            </td>
                                            <td>
                                                <%= new
                                                Date(order.createdAt).toLocaleDateString('vi-VN')
                                                %>
                                            </td>
                                            <td><%= order.quantity %></td>
                                            <td>
                                                <%= new
                                                Intl.NumberFormat('vi-VN', {
                                                style: 'currency', currency:
                                                'VND' }).format(order.total) %>
                                            </td>
                                            <td>
                                                <span
                                                    class="badge badge-<%= order.status === 'delivered' ? 'success' : order.status === 'processing' ? 'warning' : order.status === 'cancelled' ? 'danger' : 'info' %>"
                                                >
                                                    <%= order.status ===
                                                    'delivered' ? 'Đã giao' :
                                                    order.status ===
                                                    'processing' ? 'Đang xử lý'
                                                    : order.status ===
                                                    'cancelled' ? 'Đã hủy' :
                                                    'Chờ xử lý' %>
                                                </span>
                                            </td>
                                        </tr>
                                        <% }); %> <% } else { %>
                                        <tr>
                                            <td
                                                colspan="5"
                                                class="text-center text-muted"
                                            >
                                                Chưa có đơn hàng nào
                                            </td>
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- contentFor('style') %>
<style>
    .cursor-pointer {
        cursor: pointer;
    }
    .product-images .main-image {
        max-height: 400px;
        overflow: hidden;
    }
    .product-images .main-image img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }
    .thumbnail-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .badge {
        padding: 0.5em 1em;
    }
</style>

<%- contentFor('script') %>
<script>
    function setMainImage(src) {
        const mainImage = document.querySelector(".main-image img");
        mainImage.src = src;
    }
</script>
